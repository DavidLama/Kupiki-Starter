extends ../layout

block content

  .row
    .col-sm-1
    .col-sm-10
      .page-header
        h3 Sign up

  .row
    .col-sm-2
    .col-sm-8
      form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.label-floating
          label.control-label(for='username') Username
          input.form-control(type='text', name='username', id='username', required)
        .form-group.label-floating
          label.control-label(for='password') Password
          input.form-control(type='password', name='password', id='password', required)
        .form-group.label-floating
          label.control-label(for='confirmPassword') Confirm Password
          input.form-control(type='password', name='confirmPassword', id='confirmPassword', required)
        .form-group.label-floating
          button.btn.btn-raised.btn-success(type='submit')
            i.fa.fa-user-plus
            | Signup
